model accounts {
  id                   Int                  @id @default(autoincrement())
  telegram_id          Int                  @unique
  username             String
  next_start_timestamp Int
  cookie               String
  mini_game_keys       mini_game_keys[]
  mini_game_requests   mini_game_keys_requests[] // Добавляем связь
}

model mini_game_keys {
  id           Int    @id @default(autoincrement())
  account_id   Int
  mini_game_id Int
  value        String

  clients accounts @relation(fields: [account_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model mini_game_keys_requests {
  id           Int    @id @default(autoincrement())
  account_id   Int
  mini_game_id Int
  count        Int

  account accounts @relation(fields: [account_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
